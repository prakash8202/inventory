<?xml version='1.0' encoding='UTF-8'?>
<ui>
	<uid>expense.create</uid>
	<title>Add/Modify expense</title>
	<type>skinnablecontainer</type>
	<width>20</width>
	<height>17</height>
	<layout>vertical</layout>

	<pruicntnr id='formContainer' layout='form' istab='false' ismulticolumn='false'>
		<components id='expenseForm' type='' label='' layout='form' tabgroup='' colgroup=''>
			<icomp type='nullcomp'>
				<attrname>expense_pid</attrname>
				<label>PID</label>
			</icomp>
			<icomp type='label'>
				<attrname>expense_type_lbl</attrname>
				<label>Expense Type</label>
				<labelbold>false</labelbold>
			</icomp>
			<icomp type='datefield'>
				<attrname>expense_date</attrname>
				<label>Expense Date</label>
				<required>true</required>
				<tooltip>Enter Expense Date</tooltip>
				<before></before>
				<after>-1</after>
			</icomp>
			<icomp type='textfield'>
				<attrname>amount</attrname>
				<label>Amount (INR)</label>
				<required>true</required>
				<tooltip>Expense Amount</tooltip>
				<restrict>0-9.</restrict>
				<enabled>false</enabled>
			</icomp>
		</components>
		<components id='CategoryCrudBtns' type='' label='' layout='horizontal' tabgroup='' colgroup=''>
			<icomp type='button'>
				<attrname>save_btn</attrname>
				<label>Save</label>
				<tooltip>Save</tooltip>
			</icomp>
		</components>
	</pruicntnr>
</ui>
