<?xml version='1.0' encoding='UTF-8'?>
<ui>
	<uid>vendor.create</uid>
	<title>Add/Modify vendor</title>
	<type>skinnablecontainer</type>
	<width>25</width>
	<height>25</height>
	<layout>vertical</layout>

	<pruicntnr id='formContainer' layout='form' istab='false' ismulticolumn='false'>
		<components id='vendorForm' type='' label='' layout='form' tabgroup='' colgroup=''>
			<icomp type='nullcomp'>
				<attrname>vendor_pid</attrname>
				<label>PID</label>
			</icomp>
			<icomp type='textfield'>
				<attrname>vendor_name</attrname>
				<label>Vendor Name</label>
				<tooltip>Vendor Name</tooltip>
				<required>true</required>
				<enabled>false</enabled>
			</icomp>
			<icomp type='textarea'>
				<attrname>vendor_addr</attrname>
				<label>Address</label>
				<tooltip>Vendor Address</tooltip>
