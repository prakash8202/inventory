				<attrname>vendor_number</attrname>
				<label>Phone Number</label>
				<tooltip>Phone Number</tooltip>
				<restrict>0-9</restrict>
				<enabled>false</enabled>
			</icomp>
		</components>
		<components id='CategoryCrudBtns' type='' label='' layout='horizontal' tabgroup='' colgroup=''>
			<icomp type='button'>
				<attrname>save_btn</attrname>
